<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="fill_parent"
    tools:context="com.philips.lighting.quickstart.setting_Bridge"
    android:clickable="false"
    android:longClickable="false"
    android:weightSum="1"
    android:baselineAligned="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:measureWithLargestChild="false"
    android:nestedScrollingEnabled="false">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="10px"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="NAME"
            android:id="@+id/textView6"
            android:elegantTextHeight="false"
            android:editable="false"
            android:clickable="false"
            android:nestedScrollingEnabled="false"
            android:singleLine="false" />

        <EditText
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/get_name"
            android:layout_weight="3.95" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="37dp"
            android:id="@+id/imageView2" />

        <Button
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="Change"
            android:id="@+id/change_name"
            android:layout_weight="43.23" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="#ff4dbd7e"
        android:layout_weight="0.005" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.07"
        android:paddingTop="20px"
        android:paddingLeft="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="IP"
            android:id="@+id/textView10"
            android:textSize="25dp"
            android:layout_weight="0.07"
            android:width="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/get_ip"
            android:layout_weight="0.07" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.07"
        android:paddingTop="20px"
        android:paddingLeft="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="MASK"
            android:id="@+id/textView11"
            android:layout_weight="0.07"
            android:textSize="25dp"
            android:width="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/get_mask"
            android:layout_weight="0.07" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.07"
        android:paddingTop="20px"
        android:paddingLeft="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="GATEWAY"
            android:id="@+id/textView12"
            android:layout_weight="0.07"
            android:textSize="25dp"
            android:width="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/get_gateway"
            android:layout_weight="0.07" />
    </LinearLayout>

</LinearLayout>
